

<h1>Fakebook</h1>
<br>
<h4><%= link_to "ブログを作成する",new_blog_path %></h4>
<br>
<br>
<% @blogs.each do |blog| %>
  <%= link_to blog_path(blog) do %>
    <h4><strong><%= blog.title %></strong></h4>
  <% end %>
  <p>本文：<%= blog.content %></p>
  <p>ユーザー名：<%= blog.user.name %></p>
  <%= profile_img(blog.user) %>


  <%= link_to "ブログを編集する", edit_blog_path(blog.id),class: "btn btn-default" %>
  <%= link_to "ブログを削除する", blog_path(blog.id), method: :delete,data: { confirm: '本当に削除していいですか？' } ,class: "btn btn-default"%>
  <br>
  <br>
  <br>
<% end %>
